{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2018",
        "outDir": "out",
        "lib": [
            "es7"
        ],
        "sourceMap": true,
        "rootDir": ".",
        "alwaysStrict": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": false, // TODO
        "noImplicitReturns": false, // TODO
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false, // TODO
        "strictNullChecks": false, // TODO
        "strict": true,
        "baseUrl": "./",
        "paths": {
            "*": [
                "node_modules/vscode/*",
                "*"
            ]
        },
        "skipLibCheck": true // https://github.com/Azure/ms-rest-js/issues/367
    },
    "exclude": [
        "node_modules",
        ".vscode-test",
        "gulpfile.ts"
    ]
}
